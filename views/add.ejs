<% include ./partials/Header.ejs %>

<div class="bg-zinc-800 w-full min-h-screen px-10 py-10 text-white">
    <h2 class="text-xl ">Create new Post</h2>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 " type="file" name="postimage">
            <input class=" text-black block w-1/3 px-3 py-2 rounded-md  mt-2 " type="text" name="title" placeholder="Title">
            <textarea class=" text-black block w-1/3 h-60 px-3 py-2  rounded-md mt-2 " type="text" name="description" placeholder="Description"></textarea>
            <input class="block w-1/3 px-3 py-2 rounded-md bg-red-600 mt-2" type="submit" value="Create Post">
        </form>
</div>

